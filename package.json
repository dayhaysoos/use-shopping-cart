{
  "scripts": {
    "dev": "netlify dev",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "dev:nextjs": "pnpm --filter nextjs run dev",
    "dev:cra": "pnpm --filter use-shopping-cart-cra run start",
    "dev:gatsby": "pnpm --filter ecommerce-gatsby-tutorial run start",
    "dev:typescript-cra": "pnpm --filter typescript-usage run start",
    "dev:docs": "pnpm --filter docs run start",
    "test": "pnpm --filter use-shopping-cart run test",
    "test:watch": "pnpm --filter use-shopping-cart run test:watch"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "lint-staged": "^10.5.4",
    "open-cli": "^6.0.1",
    "prettier": "^2.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,.d.ts,ts,tsx,mdx}": "prettier --write"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.24.0",
    "husky": "^8.0.0",
    "typescript": "^4.9.5",
    "webpack-dev-server": "3.11.1"
  },
  "funding": [
    {
      "type": "sponsors",
      "url": "https://github.com/sponsors/dayhaysoos"
    }
  ]
}

